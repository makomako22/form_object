<%= form_with url: users_path, local: true do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, value: @user.first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, value: @user.last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, value: @user.email %>
  </div>

  <div class="field">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, value: @user.nickname %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, value: @user.location %>
  </div>

  <div class="field">
    <%= form.label :hobby %>
    <%= form.text_field :hobby, value: @user.hobby %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
